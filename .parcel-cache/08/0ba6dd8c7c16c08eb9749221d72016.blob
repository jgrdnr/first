@import url("https://fonts.googleapis.com/css2?family=Bentham&display=swap");
* {
  font-family: Bentham;
  margin: 0;
  padding: 0;
  cursor: url("cf3a987a27fef51d17edb32078cc2392"),
    url("b72e4819e45f5dbcd666229bbc8aa99f"), auto;
}
html {
  cursor: url("cf3a987a27fef51d17edb32078cc2392"),
    url("b72e4819e45f5dbcd666229bbc8aa99f"), auto;
}
body {
  height: 100vh;
  background-color: beige;
  text-shadow: 0 13.36px 8.896px #c4b59d, 0 -2px 1px #fff;
}
#x {
  border: 3px solid gray;
  background-color: white;
  height: 400px;
  position: relative;
}
#x .icon {
  position: absolute;
  z-index: 2;
}
button#floatingvirus {
  background: none;
  border: none;
  outline: none;
  background-color: none;
  padding: 10px 20px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  margin: 4px 2px;
}
button#confirm-cases {
  max-width: 300px;
}
button#reset {
  background: none;
  border: none;
  outline: none;
  text-decoration: none;
  font-size: 1.5rem;
}
.virusimg {
  height: 100px;
  width: auto;
}
.virus-box {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: beige;
  width: auto;
  margin-top: 0;
  margin-left: 300;
  margin-right: 300;
  padding: 300 0 15 0;
}
.virus-content {
  animation-name: floating;
  animation-duration: 3s;
  animation-iteration-count: infinite;
  animation-timing-function: ease-in-out;
  margin-top: 333px;
  padding: 0px 300px 14px 300px;
  position: absolute;
  z-index: 10;
}
.virus-info {
  display: grid;
  grid-row: 1fr 1fr 1fr;
  grid-row: auto;
  align-items: center;
  justify-content: center;
  font-family: Bentham;
  font-size: 45px;
  font-weight: bold;
}
.virus-answer {
  display: grid;
  grid-row: 1fr 1fr 1fr;
  grid-row: auto;
  align-items: center;
  justify-content: center;
}
.virus-cases {
  display: grid;
  grid-row: 1fr;
  align-items: center;
  justify-content: center;
}
.country-cases {
  display: flex;
  align-items: center;
  justify-content: center;
}
.reset {
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 9;
}
.wrapper {
  position: relative;
}
@keyframes floating {
  0% {
    transform: translate(0, 0px);
  }
  50% {
    transform: translate(0, 15px);
  }
  100% {
    transform: translate(0, -0px);
  }
}
